.navbar.navbar-default(ng-controller='NavbarController')
    .container
        .navbar-header
          button.navbar-toggle(type='button', ng-click='Toggle()')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#/') {{ Application.Name }}
        .navbar-collapse(collapse='IsCollapsed')
          ul.nav.navbar-nav
            li(ng-class="{active:IsActive('/')}")
              a(href='#/') Dashboard
            li(ng-class="{active:IsActive('/decks')}")
              a(href='#/decks') Deck Lists
            li(ng-class="{active:IsActive('/helper')}")
              a(href='#/helper') Deck Stats
            li(ng-class="{active:Application.ShowFilters}", ng-click="ToggleFilters()")
              a(style="cursor: pointer;") 
                span.text-danger(ng-if="Application.ShowFilters") Hide Filters
                span.text-success(ng-if="!Application.ShowFilters") Show Filters