.row
  .col-sm-6
    .panel.panel-primary
      .panel-heading
        | Main Cards to Consider
        .pull-right
          button.btn.btn-sm.btn-success(ngclipboard, data-clipboard-text="{{GetTextListFromCardGroup(CopyClipboardCards)}}", tooltip="Copy these cards to the Clipboard")
            span.glyphicon.glyphicon-copy
        .clearfix
      .panel-body
        .row
          .col-md-6
            .panel.panel-success
                .panel-heading
                  | Key Cards 
                  small.pull-right ({{ GetCardCount(Tier1Cards) }} cards) 
                table.table.table-striped.table-condensed(style="font-size: 0.8em;")
                  thead
                    th Avg#
                    th Card
                    th Seen%
                  tbody
                    tr(ng-repeat="card in Tier1Cards | limitTo: 30", style="cursor: help;", tooltip-placement="right", tooltip-append-to-body="true", tooltip-html-unsafe="<img src='{{ GetCardImage(card.NAME) }}' width='150px' height='227px'><div class='clearfix'></div>") 
                      td
                        strong {{ card.TOTALCOUNT / card.SEENCOUNT | number: 1 }}
                      td
                        strong
                          | {{ card.NAME }}
                      td {{ card.SEENCOUNT / FILTERDECKDB.length * 100 | number: 1 }}%
