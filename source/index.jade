html.no-js(xmlns:ng='http://angularjs.org', lang='en')
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')    
  title Hearthstone Deck DB
  meta(name='description', content='')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='apple-touch-icon', href='apple-touch-icon.png')
  // CSS libraries
  link(rel='stylesheet', type='text/css', href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css')
  link(rel='stylesheet', type='text/css', href='//cdnjs.cloudflare.com/ajax/libs/angular-multi-select/4.0.0/isteven-multi-select.min.css')
  <!--[if lte IE 8]>
  link(rel='stylesheet', type='text/css', href='bootstrap-3.3.4-dist/css/bootstrap.min.css')
  <![endif]-->
  // Grunt Generated CSS
  link(rel='stylesheet', type='text/css', href='stylesheet.min.css')
  // Javascript libraries
  //script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js')
  //script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/js/bootstrap.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.28/angular.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.28/angular-route.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.1/ui-bootstrap-tpls.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-css/1.0.7/angular-css.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-local-storage/0.1.5/angular-local-storage.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-google-chart/0.1.0/ng-google-chart.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-multi-select/4.0.0/isteven-multi-select.min.js')
  // Grunt Generated Javascript
  script(type='text/javascript', src='javascript.min.js?11.30.2016')
  body#ng-app(ng-app='AngularApp', ng-controller='AppController')
    // Non-Footer Content
    .wrapper
      <!--[if lte IE 8]>
      p.browserupgrade 
        | You are using an 
        strong outdated 
        | browser. Please 
        a(href='http://browsehappy.com/')
        | upgrade your browser to improve your experience.
      <![endif]-->
      // Navigation Bar
      div(ng-include='', src="'partials/navbar.html'")
      .container
        .row
          .col-sm-12(ng-if="Filters.Showing")
            .panel.panel-info
              .panel-heading
                | Deck Filters
              .panel-body
                .row
                  .col-sm-3
                      label Cutoff Start Date
                      p.input-group
                        input.form-control(datepicker-popup="", type="text", ng-model="Filters.StartDate", is-open="StartDatePicker.opened")
                        span.input-group-btn
                          button.btn.btn-default(type="button", ng-click="OpenStartDatePicker($event)")
                            span.glyphicon.glyphicon-calendar
                      label Cutoff End Date
                      p.input-group
                        input.form-control(datepicker-popup="", type="text", ng-model="Filters.EndDate", is-open="EndDatePicker.opened")
                        span.input-group-btn
                          button.btn.btn-default(type="button", ng-click="OpenEndDatePicker($event)")
                            span.glyphicon.glyphicon-calendar
                  form.col-sm-3
                    .form-group
                      label Class Filter
                      div(isteven-multi-select, input-model="Classes", output-model="Filters.Classes", button-label="icon", item-label="icon name", tick-property="selected")
                      br
                      label Archetype Filter
                      div(isteven-multi-select, input-model="Archetypes", output-model="Filters.Archetypes", max-labels="3", button-label="name", item-label="icon name countword", tick-property="selected")
                  form.col-sm-3
                    .form-group
                      label Include Decks With Cards
                      div(isteven-multi-select, input-model="FilteredDeckCards", output-model="Filters.IncludeDecksWithCards", max-labels="3", button-label="name", item-label="name", tick-property="include")
                      br
                      label Exclude Decks With Cards
                      div(isteven-multi-select, input-model="FilteredDeckCards", output-model="Filters.ExcludeDecksWithCards", max-labels="3", button-label="name", item-label="name", tick-property="exclude")
                  form.col-sm-3
                    .form-group
                      label Event Filter
                      div(isteven-multi-select, input-model="Events", output-model="Filters.Events", max-labels="3", button-label="name", item-label="name countword", tick-property="selected")
                hr
                .row
                  .col-sm-4
                      button.btn.btn-block.btn-warning(ng-click="Filters.Showing = false;")
                        | Hide Filters
                  .col-sm-4
                      button.btn.btn-block.btn-danger(ng-click="ResetFilters();")
                        | Reset Filters
                  .col-sm-4
                      button.btn.btn-block.btn-success(ng-click="Calculate();")
                        | Filter Decks
        div(ng-view='')
      .push
    // Footer
    div(ng-include='', src="'partials/footer.html'")