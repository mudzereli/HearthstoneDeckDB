doctype html
html.no-js(xmlns:ng='http://angularjs.org', lang='en')
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')    
  title Shawn's Angular App Skeleton
  meta(name='description', content='')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='apple-touch-icon', href='apple-touch-icon.png')
  // CSS libraries
  link(rel='stylesheet', type='text/css', href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css')
  link(rel='stylesheet', type='text/css', href='//cdnjs.cloudflare.com/ajax/libs/angular-multi-select/4.0.0/isteven-multi-select.min.css')
  <!--[if lte IE 8]>
  link(rel='stylesheet', type='text/css', href='bootstrap-3.3.4-dist/css/bootstrap.min.css')
  <![endif]-->
  // Grunt Generated CSS
  link(rel='stylesheet', type='text/css', href='stylesheet.min.css')
  // Javascript libraries
  //script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js')
  //script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/js/bootstrap.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.28/angular.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.28/angular-route.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.1/ui-bootstrap-tpls.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-css/1.0.7/angular-css.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-local-storage/0.1.5/angular-local-storage.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-google-chart/0.1.0/ng-google-chart.min.js')
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/angular-multi-select/4.0.0/isteven-multi-select.min.js')
  // Grunt Generated Javascript
  script(type='text/javascript', src='javascript.min.js')
  body#ng-app(ng-app='AngularApp', ng-controller='AppController')
    // Non-Footer Content
    .wrapper
      <!--[if lte IE 8]>
      p.browserupgrade 
        | You are using an 
        strong outdated 
        | browser. Please 
        a(href='http://browsehappy.com/')
        | upgrade your browser to improve your experience.
      <![endif]-->
      // Navigation Bar
      div(ng-include='', src="'partials/navbar.html'")
      .container
        .row
          .col-sm-12(ng-if="Application.ShowFilters")
            .panel.panel-primary
              .panel-heading
                | Deck Filters
              .panel-body
                .row
                  form.col-sm-3
                    .form-group
                      label Class Filter
                      select.form-control(multiple, ng-model="$parent.Application.FilterClasses")
                        option(class="fg-SHAMAN", value="shaman") Shaman
                        option(class="fg-MAGE", value="mage") Mage
                        option(class="fg-DRUID", value="druid") Druid
                        option(class="fg-WARRIOR", value="warrior") Warrior
                        option(class="fg-WARLOCK", value="warlock") Warlock
                        option(class="fg-HUNTER", value="hunter") Hunter
                        option(class="fg-ROGUE", value="rogue") Rogue
                        option(class="fg-PRIEST", value="priest") Priest
                        option(class="fg-PALADIN", value="paladin") Paladin
                  form.col-sm-3
                    .form-group
                      label Archetype Filter
                      //div(isteven-multi-select, input-model="modernBrowsers", output-model="Application.FilterArchetypes", button-label="name", item-label="name maker", tick-property="ticked")
                      select.form-control(multiple, ng-model="$parent.Application.FilterArchetypes")
                        option(class="fg-{{ ArchetypeData[archetype].CLASS }}", ng-repeat="archetype in DECKARCHETYPES", value="{{ archetype }}") {{ archetype | titleCase }} ({{ ArchetypeData[archetype].FILTERCOUNT }})
                  
                  form.col-sm-3
                    .form-group
                      label Event Filter
                      select.form-control(multiple, ng-model="$parent.Application.FilterEvents")
                        option(ng-repeat="event in EVENTS", value="{{ event }}") {{ event | titleCase }} ({{ EventData[event].FILTERCOUNT }})
                  .col-sm-3
                    label Cutoff Start Date
                    p.input-group
                      input.form-control(datepicker-popup="", type="text", ng-model="Application.FilterStartDate", is-open="StartDatePicker.opened")
                      span.input-group-btn
                        button.btn.btn-default(type="button", ng-click="OpenStartDatePicker($event)")
                          span.glyphicon.glyphicon-calendar
                    label Cutoff End Date
                    p.input-group
                      input.form-control(datepicker-popup="", type="text", ng-model="Application.FilterEndDate", is-open="EndDatePicker.opened")
                      span.input-group-btn
                        button.btn.btn-default(type="button", ng-click="OpenEndDatePicker($event)")
                          span.glyphicon.glyphicon-calendar
                .pull-right
                  button.btn.btn-warning(ng-click="Application.ShowFilters = false;")
                    | Hide Filters
                  &nbsp;
                  button.btn.btn-danger(ng-click="ResetFilters();")
                    | Reset Filters
                  &nbsp;
                  button.btn.btn-success(ng-click="FilterDecks();")
                    | Filter Decks
        div(ng-view='')
      .push
    // Footer
    div(ng-include='', src="'partials/footer.html'")